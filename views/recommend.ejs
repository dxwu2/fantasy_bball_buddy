<!DOCTYPE html>
<html lang="en">
<head>
  <title>Player recommendations</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="table-data">
<h2>Recommended Players</h2>
    <table>
        <tr>
            <th>Ranking</th>
            <th>Player</th>
            <th>Position</th>
            <th>Team</th>
            <th>Average fantasy points</th>
        </tr>
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.player %></td>
            <td><%=data.pos %></td>
            <td><%=data.team %></td>
            <td><%=data.fantasy_points %></td>
            <!--<td><a href="/users/edit/<%=data.id%>">Edit</a></td>
            <td><a href="/users/delete/<%=data.id%>">Delete</a></td>-->
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
</html>
<style> 
table, td, th { 
    border: 1px solid #ddd; 
    text-align: left; 
} 
table { 
    border-collapse: collapse; 
    width: 50%; 
} 
.table-data{ 
    position: relative; 
    left:150px; 
    top:100px; 
} 
th, td { 
    padding: 15px; 
} 
</style>